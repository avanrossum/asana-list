{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": [],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/settings/**/*.ts",
    "src/settings/**/*.tsx",
    "src/update-dialog/**/*.ts",
    "src/update-dialog/**/*.tsx",
    "src/shared/**/*.ts"
  ]
}
